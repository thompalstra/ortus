<script>
  document.querySelectorAll( '#ctr > div' ).forEach( ( node ) => {
    node.addEventListener( "click", function ( event ){
      this.parentNode.querySelectorAll( ".zoomed" ).forEach( ( cnode ) => {
        if( cnode != this ){
          cnode.classList.remove( "zoomed" );
        }
      } )


      if( this.classList.contains( "zoomed" ) ){
        this.classList.remove( "zoomed" );
      } else {
        this.classList.add( "zoomed" );
      }
    } );
  } )
</script> -->
